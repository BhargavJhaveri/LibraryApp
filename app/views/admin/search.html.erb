<h1>Table of books</h1>

<table class="table">
	<tr>
		
		<th>ISBN</th>
		<th>TITLE</th>
		<th>AUTHOR</th>
		<th>DESCRIPTION</th>
		<th>STATUS</th>
		
	</tr>
	<%@books.each do |book| %>
	<tr>
	<td><%=book.ISBN%></td>
	<td><%=book.TITLE %></td>
	<td><%=book.AUTHORS %></td>
	<td><%=book.DESCRIPTION %></td>
	<td><%=book.STATUS %></td>
	<td>
	<%if book.STATUS=='check_in'%>
	<%=link_to("Checkout",:controller =>'admin',:action =>"checkoutbook",:id =>book.id.to_s,:email => @admin.email)%>
	<% end %>
	
	</td>
     </tr>
     <% end %>
     </table>