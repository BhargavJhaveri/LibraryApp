<% if !flash[:notice].blank? %>
<div class="notice">
	<%= flash[:notice] %>
</div>
<% end %>

<h1>THESE ARE THE BOOKS THAT ARE CHECKED OUT AND NOT CHECKED IN</h1>
	<table class="table">
	<tr>
		
		<th>title</th>
		<th>authors</th>
		<th>description</th>
		<th>isbn</th>
		<th>ISSUED AT</th>
		
	</tr>
   <%@array.each do |f| %>

	<tr>
	<td><%=f.title %></td>
	<td><%=f.authors %></td>
	<td><%=f.description %></td>
	<td><%=f.isbn %></td>
	<td><%=f.created_at %></td>
	<td><%link_to("checkin",:controller =>'books',:action => 'checkin',:id => f.id.to_s)%></td>
	</tr>
	<% end %>
	</table>
	
