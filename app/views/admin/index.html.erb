<h1>Other Admins</h1>
<table class='table'>
	<tr>
		
		<th>First name</th>
		<th>Last name</th>
		<th>Email</th>
		
	</tr>
	<%@admin.each do |admin| %>
	<tr>
	<td><%=admin.first_name%></td>
	<td><%=admin.Last_name %></td>
	<td><%=admin.email %></td>
	
	<td>
	<%= link_to("show",:action =>'show',:id =>admin.id.to_s) %>
     <%= link_to("edit",:action =>'edit',:id =>admin.id.to_s ) %>
     <%if !(admin.email=='vravi2@ncsu.edu' && admin===@Admin) %>
     <%= link_to("delete",:action =>'delete',:id =>admin.id.to_s) %>
     <% end %>
 </td>
     </tr>
     <% end %>
     </table>
     <h1>Suggestions</h1>
<table class='table'>
	<tr>
		
		<th>Suggestion from</th>
		<th>Suggestion title</th>

		
	</tr>
	<%@suggest.each do |suggest| %>
	<tr>
	<td><%=suggest.email%></td>
	<td><%=suggest.title %></td>
	
	
	<td>
	<%= link_to("Add the suggestion to books",:action =>'addsuggestion',:id => suggest.id,:email => @Admin.email) %>
     <%= link_to("delete",:action =>'deletesuggestion',:id => suggest.id) %>
     </tr>
     <% end %>
     </table>



