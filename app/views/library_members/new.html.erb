
<div class="row">

	<div class="col-md-6 col-md-offset-1">
<h1>Sign Up Form</h1>
<%= form_for(:member ,:url=> {:controller =>'library_members',:action => 'create'}) do |f| %>
<table >

<tr>
<td>Firstname</td>
<td><%= f.text_field(:first_name) %></td>
</tr>
<tr>
<td>Lastname</td>
<td><%= f.text_field(:Last_name) %></td>
</tr>
<tr>
<td>Email</td>
<td><%= f.text_field(:email) %></td>
</tr>
<tr>
<td>Password</td>
<td><%= f.text_field(:password)%></td>
</tr>
<tr>
<td>
<%=submit_tag("Create user account",class: 'btn btn-primary') %> </td>
</tr>
</table>
<% end %>
</div>
</div>